<h3><%= t('action.login') %></h3>

<div class="box_user">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, t('user.email') %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size: 30 %>
    </div>

    <div class="field">
      <%= f.label :password, t('user.password') %><br />
      <%= f.password_field :password, autocomplete: "current-password", size: 30 %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label "ログイン情報を保持する" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t('action.login'), class: "btn outline btn-primary" %>
    </div>
  <% end %>
</div>
