<h3>タグの管理</h3>

<div class="box-tag">
  <table>
    <% @tags.each do |t| %>
      <tr>
        <td><%= t.name %></td>
        <td><%= link_to "　削除", tag_path(t.id), method: :delete, data: {confirm: "タグを削除しますか？"} %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= paginate @tags %>
  <%= render "new" %>
</div>
