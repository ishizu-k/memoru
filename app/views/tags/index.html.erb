<h3><%= t('action.tag') %></h3>

<div class="box-tag">
  <table>
    <% @tags.each do |t| %>
      <tr>
        <td><%= t.name %>　</td>
        <td><%= link_to t('action.delete'), tag_path(t.id), method: :delete, data: {confirm: "タグを削除しますか？"} %></td>
      </tr>
    <% end %>
  </table>
  <br>
  <%= render "new" %>
</div>
