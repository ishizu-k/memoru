<%= form_with(model: @tag, local: true) do |f| %>
  <% if @tag.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @tag.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :name, "タグ名" %>
  <%= f.text_field :name %>

  <%= f.submit "作成" %>
<% end %>
